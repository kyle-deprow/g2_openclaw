# GitHub Copilot SDK — Authentication
# Optional: explicit GitHub token. If omitted, the SDK auto-detects:
#   GH_TOKEN → GITHUB_TOKEN → stored CLI credentials
COPILOT_GITHUB_TOKEN=

# BYOK (Bring Your Own Key) provider configuration
# Supported providers: openai, azure, anthropic, ollama
COPILOT_BYOK_PROVIDER=
COPILOT_BYOK_API_KEY=
COPILOT_BYOK_BASE_URL=
COPILOT_BYOK_MODEL=

# Path to the GitHub CLI binary (optional, SDK will auto-detect)
COPILOT_CLI_PATH=

# Log level: debug | info | warn | error
COPILOT_LOG_LEVEL=info

# OpenClaw gateway connection
OPENCLAW_HOST=127.0.0.1
OPENCLAW_PORT=18789
OPENCLAW_GATEWAY_TOKEN=
